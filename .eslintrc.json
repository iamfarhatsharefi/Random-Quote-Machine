{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": [
    "airbnb", 
    "plugin:react/recommended", 
    "plugin:react-hooks/recommended"
  ],
  "plugins": ["react"],
  "rules": {
    "react/jsx-filename-extension": ["warn", { "extensions": [".js", ".jsx"] }],
    "react/react-in-jsx-scope": "off",
    "import/no-unresolved": "off",
    "no-shadow": "off",
    "react/jsx-closing-bracket-location": "off", // Disable the rule for closing bracket location
    "react/jsx-closing-tag-location": "off", // Disable the rule for closing tag location
    "react/jsx-indent": ["error", 2], // Enforce consistent 2-space indentation
    "react/jsx-one-expression-per-line": "off", // Disable the one expression per line rule
    "indent": ["error", 2], // Enforce consistent 2-space indentation in general
    "react/jsx-wrap-multilines": "off", // Disable wrapping rules for multi-line JSX
    "react/jsx-props-no-spreading": "off" // Allow prop spreading
  },
  "overrides": [
    {
      "files": ["src/**/*Slice.js"],
      "rules": {
        "no-param-reassign": ["error", { "props": false }]
      }
    }
  ],
  "ignorePatterns": [
    "dist/",
    "build/"
  ]
}
